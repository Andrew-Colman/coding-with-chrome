{namespace cwc.soy.mode.ev3.Runner autoescape="strict"}


/**
 * General informations to display on the runner screen.
 */
{template .info}
  <h2>Lego Mindstorms</h2>
  <p>
    Please make sure that the sensors are connected to the following ports:
  <p>
  <ul>
    <li>Port 1 - Color Sensor</li>
    <li>Port 2 - Touch Sensor</li>
    <li>Port 4 - IR Sensor</li>
    <li>Port A - Small Motor</li>
    <li>Port B - Big Motor left</li>
    <li>Port C - Big Motor right</li>
  </ul>
  <h3>Color Sensor Mode</h3>
  <ul>
   <li>0: Reflective</li>
   <li>1: Ambient</li>
   <li>2: Color</li>
  </ul>
  <h3>IR Sensor Mode</h3>
  <ul>
   <li>0: Proximity</li>
   <li>1: Seek</li>
   <li>2: Remote Control</li>
  </ul>
{/template}
