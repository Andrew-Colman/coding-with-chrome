{namespace cwc.soy.connectScreen.Bluetooth autoescape="strict"}


/**
 * Bluetooth device template.
 */
{template .template}
  {@param prefix: string}
  {@param ble: bool}
  {@param experimental: bool}
  {@param devices: ?}

  {call .devices data="all" /}  

  {if $ble and $experimental}
    <button id="{$prefix}search-button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
      <i class="material-icons">add</i> Search for Bluetooth devices ...
    </button>
  {/if}

{/template}


/**
 * Devices template.
 */
{template .devices}
  {@param prefix: string}
  {@param devices: ?}

  <ul id="{$prefix}device-list" class="mdl-list">
    {foreach $device in keys($devices)}

      {call .deviceList_}
        {param address: $devices[$device]['address'] /}
        {param connected: $devices[$device]['connected'] /}
        {param icon: $devices[$device]['icon'] /}
        {param type: $devices[$device]['type'] /}
        {param name: $devices[$device]['name'] /}
      {/call}

    {/foreach}
  </ul>
{/template}


/**
 * Connect devices template.
 */
{template .connect}
  {@param device: ?}

  {msg desc=""}Connecting device {$device['name']} ({$device['type']}) at {$device['address']} ...{/msg}
  <div class="mdl-progress mdl-js-progress mdl-progress__indeterminate"></div>
{/template}


/**
 * Disconnect devices template..
 */
{template .disconnect}
  {@param device: ?}

  {msg desc=""}Disconnecting device {$device['name']} ({$device['type']}) at {$device['address']} ...{/msg}
  <div class="mdl-progress mdl-js-progress mdl-progress__indeterminate"></div>
{/template}


/**
 * Devices template.
 */
{template .deviceList_}
  {@param address: string}
  {@param connected: bool}
  {@param icon: string}
  {@param name: string}
  {@param type: string}

  <li class="mdl-list__item mdl-list__item--three-line">
    <span class="mdl-list__item-primary-content">
      <i class="material-icons mdl-list__item-avatar">
        {if $icon}
          {$icon}
        {else}
          devices_other
        {/if}
      </i>
      {if $connected}
        <span>{$name}</span>
      {else}
        <span class="link_text"
              data-action="connect"
              data-address="{$address}"
              title="{msg desc=""}Connect {$type} device{/msg}">
          {$name}
        </span>
      {/if}
      <span class="mdl-list__item-text-body">
        {msg desc=""}Address: {$address}{/msg}<br>
        {msg desc=""}{$type}{/msg}
      </span>
    </span>
    <span class="">
      {if $connected}
        <i class="link_button material-icons"
           data-action="disconnect"
           data-address="{$address}"
           title="{msg desc=""}Disonnect {$type} device{/msg}">
          bluetooth_connected
        </i>
      {else}
        <i class="link_button material-icons"
           data-action="connect"
           data-address="{$address}"
           title="{msg desc=""}Connect {$type} device{/msg}">
          bluetooth
        </i>
      {/if}
    </span>
  </li>
{/template}
